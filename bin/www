#!/usr/bin/env node

/**
 * Module dependencies.
 */

// const { error } = require('console');
var app = require('../app');
var debug = require('debug')('npm-server:server');
var http = require('http');
const fs = require('fs');
var https = require('https')


var key = fs.readFileSync(__dirname + '/../certs/sgutkbsort.id.vn/private.key');
var cert = fs.readFileSync(__dirname + '/../certs/sgutkbsort.id.vn/certificate.crt');
var credentials = {
   key: key, 
   cert: cert
};

var server = https.createServer(credentials, app);
// var server = http.createServer(app);

server.on('error', (error) => {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var port = app.get('port');

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
});

server.listen(app.get('port'), () => {
  console.log(`server start in http://localhost:${app.get('port')}`)
});
