#!/usr/bin/env node

/**
 * Module dependencies.
 */

// const { error } = require('console');
var app = require('../app');
var debug = require('debug')('npm-server:server');
const fs = require('fs');
var https = require('https')
var http = require('http')
var path = require('path')


var key = fs.readFileSync(path.join(__dirname , '../certs/tkbsgusort.id.vn/private.key'));
var cert = fs.readFileSync(path.join(__dirname , '../certs/tkbsgusort.id.vn/certificate.crt'));
var ca = fs.readFileSync(path.join(__dirname ,'../certs/tkbsgusort.id.vn/ca_bundle.crt'));
var options = {
  ca: ca,
  key: key,
  cert: cert
};

var server_https = https.createServer(options, app);
var server_http = http.createServer(app);

function onError(error, port) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

var http_port = app.get('http_port');
var https_port = app.get('https_port');

server_https.on('error', (e) => onError(e, https_port));
server_http.on('error', (e) => onError(e, http_port))

server_https.listen(https_port, () => {
  console.log(`server start in https://localhost:${https_port}`);
});

server_http.listen(http_port, () => {
  console.log(`server start in http://localhost:${http_port}`)
})